{
  "name": "webpack-project",
  "version": "1.0.0",
  "description": "Project with webpack, babel, scss",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --mode development",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "watch": "cross-env NODE_ENV=development webpack --mode development --watch",
    "start": "cross-env NODE_ENV=development webpack serve --mode development --open",
    "json:server": "json-server --watch db.json",
    "stats": "webpack --json > stats.json && bundle-analyzer stats.json"
  },
  "browserslist": "> 0.25%, not dead",
  "author": "Danil, danil.kinshhak@icloud.com",
  "license": "ISC",
